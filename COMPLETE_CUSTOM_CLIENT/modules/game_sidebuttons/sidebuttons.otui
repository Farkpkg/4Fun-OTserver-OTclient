UISideButton < UIWidget
  size: 22 22
  margin-top: -1
  UIButton
    id: button
    anchors.top: parent.top
    anchors.left: parent.left
    margin-left: 1
    margin-top: 1
    size: 20 20
    image-clip: 0 0 20 20
    image-offset: 0 0
    tooltip-delayed: true
    $pressed:
      image-clip: 0 20 20 20
      image-offset: 1 1
    $checked:
      image-clip: 0 20 20 20
      image-offset: 1 1

  UIWidget
    id: brightButton
    size: 20 20
    anchors.top: prev.top
    anchors.left: prev.left
    phantom: true
    visible: false
    image-source: /images/ui/bright-x20
  UIWidget
    id: highlight
    size: 22 22
    visible: false
    margin-top: -1
    phantom: true
    image-source: /images/topbuttons/highlight
    anchors.horizontalCenter: parent.horizontalCenter
    anchors.verticalCenter: parent.verticalCenter

NonClosableMiniWindow
  height: 137
  id: mainButtonsWindow
  &type: 'mainButtons'

  NonClosableMiniWindowContents
    UIButton
      id: storeButton
      anchors.top: parent.top
      anchors.left: parent.left
      size: 108 20
      margin-left: 4
      margin-top: 2
      image-source: /images/store/button-store-up
      image-clip: 0 0 108 20
      !tooltip: tr('Open the Store')
      tooltip-delayed: true
      @onClick: g_game.openStore(); modules.game_store.Store:openHome()
      $pressed:
        image-source: /images/store/button-store-down
    UIWidget
      id: storeBorder
      size: 111 22
      anchors.top: prev.top
      anchors.left: prev.left
      margin-left: -1
      margin-top: -1
      phantom: true
      visible: false
      image-source: /images/store/rectangle-highlight

    Button
      id: battlepassButton
      size: 108 20
      anchors.top: prev.bottom
      anchors.left: parent.left
      image-source: /images/ui/buttons-blue
      icon-source: /images/game/battlepass/mainIcon1
      icon-size: 18 16
      icon-offset: 5 2
      !text: tr('    Battle Pass')
      font: $var-cip-font-wheel
      color: $var-text-cip-color
      text-offset: 0 -1
      margin-left: 4
      margin-top: 4
      !tooltip: tr('Open the Battle Pass')
      tooltip-delayed: true
      @onClick: modules.game_battlepass.loadMenu('challengesMenu'); g_game.requestBattlePass(0)

    UIWidget
      id: border
      size: 111 22
      anchors.top: prev.top
      anchors.left: prev.left
      margin-left: -1
      margin-top: -1
      phantom: true
      visible: true
      image-source: /images/store/rectangle-highlight

    UIWidget
      id: bPassbright
      size: 108 20
      anchors.top: battlepassButton.top
      anchors.left: battlepassButton.left
      phantom: true
      image-source: /images/game/battlepass/bright

    UIButton
      id: hiddenMenu
      anchors.top: storeButton.top
      anchors.right: parent.right
      size: 42 20
      margin-right: 15
      image-source: /images/ui/hidden-menu-down
      image-clip: 0 0 42 20
      $hover:
        image-clip: 0 0 42 20
      @onClick: modules.game_sidebuttons.toggleMainButtons()

    UIButton
      id: logout
      anchors.top: hiddenMenu.bottom
      anchors.right: hiddenMenu.right
      margin-top: 5
      size: 20 20
      image-source: /images/ui/logout-up
      image-clip: 0 0 20 20
      tooltip: Leave the game
      tooltip-delayed: true
      $hover:
        image-clip: 0 0 20 20
      $pressed:
        image-source: /images/ui/logout-down
        image-clip: 0 0 20 20
      @onClick: modules.game_interface.tryExit()

    UIButton
      id: options
      anchors.top: logout.top
      anchors.right: logout.left
      margin-right: 3
      size: 20 20
      image-source: /images/ui/options-up
      image-clip: 0 0 20 20
      tooltip: Open options
      tooltip-delayed: true
      $hover:
        image-clip: 0 0 20 20
      $pressed:
        image-source: /images/ui/options-down
        image-clip: 0 0 20 20
      @onClick: modules.client_settings.toggle()

    Button
      id: bPassSlot
      size: 20 20
      anchors.top: prev.bottom
      anchors.right: logout.right
      margin-top: 6
      image-source: /images/ui/buttons-blue
      icon-source: /images/game/battlepass/mainIcon1
      icon-size: 18 16
      icon-offset: 1 1
      tooltip: Open BattlePass inbox
      tooltip-delayed: true

    UIButton
      id: huntFinder
      size: 20 20
      anchors.top: prev.top
      anchors.right: prev.left
      image-source: /images/topbuttons/huntfinder-mini
      image-clip: 0 0 20 20
      margin-right: 3
      tooltip: Open HuntFinder
      tooltip-delayed: true
      $hover:
        image-clip: 0 0 20 20
      $pressed:
        image-clip: 0 20 20 20
      @onClick: modules.game_huntfinder.show()
      UIWidget
        id: newMissionIcon
        size: 16 16
        anchors.top: parent.top
        anchors.left: parent.left
        image-source: /images/store/button-store-new
        visible: false

    Button
      id: t_button
      size: 42 20
      anchors.top: prev.bottom
      anchors.left: prev.left
      margin-top: 3
      icon-source: /images/game/ranked-queue/icon-trophy-gold
      icon-size: 11 12
      icon-offset: 15 4
      tooltip: Open Prestige Arena
      tooltip-delayed: true
      @onClick: modules.game_pvp_queue.PrestigeBattle:requestOpenWindow()

    Panel
      id: buttons
      size: 108 20
      anchors.top: battlepassButton.bottom
      anchors.left: parent.left
      margin-top: 6
      margin-left: 4
      padding-left: -1
      layout:
        type: grid
        num-columns: 5
        cell-size: 22 22
        fit-children: true

    VerticalSeparator
      id: sep
      height: 110
      anchors.top: buttons.top
      anchors.left: buttons.right
      margin-left: 4
  UIWidget
    id: bottomSideButton
    size: 177 3
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    margin-bottom: -1
    image-source: /images/ui/sideBottom