NewMainWindow
  id: window
  anchors.horizontalCenter: parent.horizontalCenter
  !text: tr('Add hotkey preset')
  font: $var-cip-font
  color: $var-text-cip-color-grey
  size: 360 121
  @onClose:
  @onEscape: self:hide()

  Panel
    id: contentPanel
    anchors.fill: parent
    margin: 14 12 12 12

    UIWidget
      id: text
      size: 213 11
      anchors.top: parent.top
      anchors.left: parent.left
      margin-left: 1
      image-source: /images/optionstab/name-label

    TextEdit
      id: target
      size: 328 16
      focusable: true
      anchors.top: prev.bottom
      anchors.left: parent.left
      anchors.right: parent.right
      margin-top: 6

    HorizontalSeparator
      id: separator
      anchors.top: prev.bottom
      anchors.left: parent.left
      anchors.right: parent.right
      margin-top: 11

    Button
      id: cancelButton
      anchors.bottom: parent.bottom
      anchors.right: parent.right
      !text: tr('Cancel')
      size: 43 20

    Button
      id: okButton
      anchors.bottom: parent.bottom
      anchors.right: prev.left
      margin-right: 10
      !text: tr('Ok')
      size: 43 20