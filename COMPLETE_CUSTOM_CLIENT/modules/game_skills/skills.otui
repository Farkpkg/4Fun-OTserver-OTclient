SkillFirstWidget < UIWidget

SkillButton < UIButton
  height: 21
  margin-bottom: 1

SmallSkillButton < SkillButton
  height: 14

SkillNameLabel < GameLabel
  id: nameLabel
  font: $var-cip-font
  color: $var-text-cip-color
  margin-right: 3
  anchors.left: parent.left
  anchors.top: parent.top
  anchors.bottom: parent.bottom

SkillValueLabel < GameLabel
  id: value
  font: $var-cip-font
  color: $var-text-cip-color
  margin-top: 1
  text-align: topright
  text-auto-resize: true
  anchors.right: parent.right
  anchors.top: parent.top
  anchors.bottom: parent.bottom
  anchors.left: prev.left

SkillImage < Label
  id: skillIcon
  margin-top: 15
  size: 9 9
  anchors.left: parent.left
  anchors.top: parent.top
CombatImage < UIWidget
  id: combatIcon
  size: 9 9
  anchors.right: parent.right
  anchors.top: parent.top
  margin-top: 3

SkillPercentPanel < ProgressBar
  id: percent
  background-color: #00c000
  height: 5
  margin-top: 17
  anchors.left: parent.left
  anchors.right: parent.right
  anchors.top: parent.top
  phantom: false

BoostButton < UIButton
  size: 78 14
  image-size: 78 14
  image-source: /images/game/skills/xp_boost
  image-clip: 0 0 78 14
  anchors.verticalCenter: parent.verticalCenter
  anchors.horizontalCenter: parent.horizontalCenter
  !tooltip: tr('Increase your experience gain with a temporary XP Boost!')
  tooltip-delayed: true
  @onClick: modules.game_skills.onBoostClick()
  $on:
    image-source: /images/game/skills/xp_boost
    image-clip: 0 0 78 14
  $pressed:
    image-source: /images/game/skills/xp_boost
    image-clip: 0 14 78 14

