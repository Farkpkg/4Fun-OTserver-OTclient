InviteNameWindow < NewMainWindow
  id: inviteCharacterName
  !text: tr('Invite player to selected chat channel')
  anchors.horizontalCenter: parent.horizontalCenter
  size: 360 121

  Panel
    id: contentPanel
    anchors.fill: parent
    margin: 12 12 12 13
    Label
      id: nameLabel
      anchors.top: parent.top
      anchors.left: parent.left
      !text: tr('Please Enter a character name:')
      font: $var-cip-font
      color: $var-text-cip-color

    TextEdit
      id: characterName
      size: 328 16
      focusable: true
      anchors.top: prev.bottom
      anchors.left: parent.left
      anchors.right: parent.right
      margin-top: 7
      @onTextChange:

    HorizontalSeparator
      id: separator
      anchors.top: prev.bottom
      anchors.left: parent.left
      anchors.right: parent.right
      margin-top: 10

    Button
      id: cancel
      anchors.bottom: parent.bottom
      anchors.right: parent.right
      !text: tr('Cancel')
      size: 43 20
      @onClick:

    Button
      id: ok
      anchors.bottom: parent.bottom
      anchors.right: prev.left
      !text: tr('Ok')
      size: 43 20
      margin-right: 10
      @onClick:

