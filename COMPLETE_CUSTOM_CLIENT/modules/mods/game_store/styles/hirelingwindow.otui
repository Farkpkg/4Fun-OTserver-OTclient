HirelingWindow < MainWindow
  size: 350 200
  !text: tr('Customise Hireling')

  Panel
    id: infoLabel
    anchors.top: parent.top
    anchors.left: parent.left
    size: 320 64
    Label
      anchors.top: parent.top
      anchors.left: parent.left
      anchors.right: parent.right
      height: 64
      margin-top: 5
      margin-left: 5
      !text: tr('Here you can customise your hireling. Make sure that the name does not violate the RubinOT Rules, or your hireling might get reported and receive on automatically generated name.')
      text-wrap: true
  Label
    !text: tr('Name:')
    anchors.top: infoLabel.bottom
    anchors.left: parent.left
    margin-top: 10
    margin-left: 5
  TextEdit
    id: nameText
    anchors.left: prev.right
    anchors.top: infoLabel.bottom
    margin-top: 5
    margin-left: 10
    width: 275
    @onTextChange: modules.game_store.onNameHirelingTextChange(self)
  Label
    id: sexLabel
    !text: tr('Sex:')
    anchors.top: prev.bottom
    anchors.left: parent.left
    margin-top: 10
    margin-left: 5
  ComboBox
    id: sexOptions
    anchors.left: prev.right
    anchors.top: nameText.bottom
    margin-top: 5
    margin-left: 20
    size: 275 20
    @onSetup: |
      self:addOption("Male")
      self:addOption("Female")
  HorizontalSeparator
    id: separator
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.top: prev.bottom
    margin-top: 8

  Button
    id: cancelHirelingButton
    font: cipsoftFont
    size: 40 20
    !text: tr('Cancel')
    anchors.right: parent.right
    anchors.top: separator.bottom
    margin-top: 5
    @onClick: modules.game_store.onClickNameChange(self)

  Button
    id: okHirelingButton
    font: cipsoftFont
    size: 40 20
    !text: tr('Buy Now')
    anchors.right: prev.left
    anchors.top: separator.bottom
    margin-top: 5
    margin-right: 5
    @onClick: modules.game_store.onClickNameChange(self)
    enabled: false

