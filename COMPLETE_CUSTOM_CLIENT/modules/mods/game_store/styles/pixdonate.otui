PixWindow < NewHeadlessWindow
  id: pixWindow
  anchors.horizontalCenter: parent.horizontalCenter
  size: 250 250
  @onEscape: modules.game_store.closePix()
  UIWidget
    size: 145 56
    anchors.top: parent.top
    anchors.horizontalCenter: parent.horizontalCenter
    margin-top: -33
    image-source: /images/game/tutorial/backdrop_crestr
  Panel
    id: contentPanel
    anchors.fill: parent
    margin: 20 17 12 17

    DonateRules
      id: donateRules
      anchors.fill: parent
      visible: false

    DonaterInfo
      id: donaterInfo
      anchors.fill: parent
      visible: false

    QrCode
      id: qrCode
      anchors.fill: parent
      visible: false

    DonationSuccess
      id: success
      anchors.fill: parent
      visible: false