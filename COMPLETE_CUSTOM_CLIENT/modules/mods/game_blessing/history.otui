MainWindow
  id: blessingWindow
  !text: tr('Blessings')
  color: #909090
  size: 615 427
  @onEscape: modules.game_blessing.closeBlessing()

  MiniWindowBlessing
    id: miniWindowBlessing
    anchors.top: parent.top
    anchors.right: parent.right
    size: 583 340
    margin-top: -6
    !text: tr('History')
    color: #909090
    text-offset: 270 2
    image-source: /images/ui/t2pixel-up-frame-borderimage
    image-border: 26

    TextList
      id: historyList
      anchors.fill: parent
      margin: 27 10 10 10
      vertical-scrollbar: historyListScroll

    UIWidget
      size: 549 17
      anchors.top: historyList.top
      anchors.left: historyList.left
      margin-left: 1
      border-width-bottom: 1
      border-color-bottom: #757575

    UIWidget
      id: dateButton
      size: 149 15
      text: Date
      color: $var-text-cip-color
      font: $var-cip-font
      text-offset: 1 -1
      text-align: leftCenter
      anchors.top: historyList.top
      anchors.left: historyList.left
      margin-top: 1
      margin-left: 1
      border-width-bottom: 1
      border-color-bottom: #292a29
      background-color: #363636
      opacity: 1.0
      $pressed:
        color: #dfdfdf88
        opacity: 0.8

    UIWidget
      height: 14
      anchors.left: prev.right
      anchors.top: historyList.top
      image-source: /images/ui/separator_vertical
      margin-top: 1

    UIWidget
      id: eventButton
      size: 399 15
      text: Event
      font: $var-cip-font
      color: $var-text-cip-color
      text-offset: 4 -1
      text-align: leftCenter
      anchors.top: historyList.top
      anchors.left: dateButton.right
      margin-top: 1
      margin-left: 2
      border-width-bottom: 1
      border-color-bottom: #292a29
      background-color: #363636
      opacity: 1.0
      $pressed:
        color: #dfdfdf88
        opacity: 0.8

    VerticalScrollBar
      id: historyListScroll
      anchors.top: historyList.top
      anchors.bottom: historyList.bottom
      anchors.right: historyList.right
      margin-right: 1
      margin-top: 1
      margin-bottom: 1
      step: 16
      pixels-scroll: true

  HorizontalSeparator
    id: separator
    anchors.left: parent.left
    anchors.right: parent.right
    anchors.top: prev.bottom
    margin-top: 12
  Button
    size: 45 20
    !text: tr('Close')
    anchors.right: parent.right
    anchors.top: separator.bottom
    margin-top: 10
    @onClick: closeBlessHistory()

  Button
    size: 45 20
    !text: tr('Back')
    anchors.right: prev.left
    anchors.top: separator.bottom
    margin-top: 10
    margin-right: 5
    @onClick: history()