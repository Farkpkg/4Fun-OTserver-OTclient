      !text: tr('Death PvE')
      font: $var-cip-font
      text-auto-resize: true
      color: $var-text-cip-color
      text-offset: 14 -2
      anchors.right: parent.right
      anchors.top: selectLabel.bottom
      margin-top: 6
      margin-right: 152
      image-source: /images/ui/checkbox
      image-clip: 0 0 12 12

    SettingsCheckBox
      id: screenshotDeathPvp
      size: 12 12
