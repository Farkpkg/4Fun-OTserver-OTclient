      anchors.top: prev.bottom
      margin-top: 6
      margin-right: 146
      image-source: /images/ui/checkbox
      image-clip: 0 0 12 12

    SettingsCheckBox
      id: screenshotGiftOfLife
      size: 12 12
      !text: tr('Gift of Life Triggered')
      font: $var-cip-font
      text-auto-resize: true
      color: $var-text-cip-color
      text-offset: 14 -2
      anchors.right: parent.right
      anchors.top: prev.bottom
      margin-top: 6
      margin-right: 75
      image-source: /images/ui/checkbox
      image-clip: 0 0 12 12

  Button
    id: openFolder
    size: 128 20
    !text: tr('Open Screenshot Folder')
    anchors.bottom: parent.bottom
    anchors.left: parent.left
    margin-bottom: 4
    margin-left: 4
    @onClick: modules.client_settings:openScreenshotFolder()

  Button
    id: resetButton
    size: 43 20
    !text: tr('Reset')
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    margin-bottom: 4
    margin-right: 4
    @onClick: modules.client_settings:resetScreenshotOptions()