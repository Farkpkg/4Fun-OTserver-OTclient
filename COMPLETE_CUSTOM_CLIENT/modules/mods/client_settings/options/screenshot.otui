      image-clip: 0 0 12 12

    SettingsCheckBox
      id: screenshotBestiaryComplete
      size: 12 12
      !text: tr('Bestiary Entry Completed')
      font: $var-cip-font
      text-auto-resize: true
      color: $var-text-cip-color
      text-offset: 14 -2
      anchors.left: parent.left
      anchors.top: prev.bottom
